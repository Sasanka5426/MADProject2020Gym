<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".gym_admin">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="GYM"
        android:textAlignment="center"
        android:textColor="@color/button_colorGoldS"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonAddNewMember"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:background="@color/button_colorS"
        android:text="Add New Member"
        android:textColor="@color/text_color1S"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/button_colorS"
        android:text="Manage Members"
        android:textAlignment="center"
        android:textColor="@color/text_color1S"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@color/button_colorS"
        android:text="Packages"
        android:textColor="@color/text_color1S"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>