<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplementDetailsAdmin">

    <ImageView
        android:id="@+id/supplement_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"

        />
    <TextView
        android:id="@+id/details_supplement_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplement_image_details"

        android:padding="15dp"
        android:text="Supplement Name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp"


        />
    <TextView
        android:id="@+id/details_supplement_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/details_supplement_name"
        android:text="Supplement Description "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp"


        />

    <TextView
        android:id="@+id/details_supplement_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/details_supplement_description"
        android:text="Supplement Price"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp"


        />


</RelativeLayout>