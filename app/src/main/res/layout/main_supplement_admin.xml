<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/supplement_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supplement"
            android:textAlignment="center"
            android:textColor="#040000"
            android:textSize="20dp"

            android:textStyle="bold" />
        <ImageView
            android:id="@+id/supplement_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/supplement_admin"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"

            />

        <TextView
            android:id="@+id/supplement_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/supplement_image"
            android:text="Supplement Price"
            android:textAlignment="center"
            android:textColor="#FF6624"
            android:textSize="18dp"


            />

        <TextView
            android:id="@+id/description_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/supplement_price"
            android:text="Supplement Description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textColor="#FF6624"
            android:textSize="16dp"


            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>










